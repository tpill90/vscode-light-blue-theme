{
    "$schema": "vscode://schemas/color-theme",
	"name": "Light Blue",
    "include": "./default themes/light_plus.json",
	"colors": {
         //TODO finish powershell theme https://github.com/PowerShell/vscode-powershell/blob/main/themes/theme-psise/theme.json
        //TODO markdown looks rough
        "activityBar.activeBorder": "#4074dd",
        "activityBar.background": "#ccd5f0",
        //TODO consider making this darker all together.  Icons are too "soft" on the blue background
        "activityBar.foreground": "#1e1e1e",
        "activityBar.border": "#5d6b99",
        "activityBarBadge.background": "#e41400",

        // Search bar at the top
        "commandCenter.background": "#ffffff",

        "editorBracketMatch.background": "#e2e6d6",
    	"editorBracketMatch.border": "#00000000",
    	"editor.foldBackground": "#00000000",
        "editorLineNumber.foreground": "#7a7a7a",

        // Controls chevron color
    	"editorGutter.foldingControlForeground": "#000000",

        // Suggest Widget is the ctrl+space intellisense popup
    	"editorSuggestWidget.background": "#f7f9fe",
        "editorSuggestWidget.foreground": "#1e1e1e",
        "editorSuggestWidget.selectedBackground" : "#c4d5ff",
    	"editorSuggestWidget.highlightForeground": "#1e1e1e",
    	"editorSuggestWidget.focusHighlightForeground": "#1e1e1e",

        // Editor Widget is things like the Find+Replace dialog
        "editorWidget.background": "#e9eeff",

        // Controls the color of text in various views NOT the editor though
        "foreground": "#363636",

        // Text input box on things like find + replace
    	"input.background": "#fcfcfc",
    	"input.border": "#203d77",

    	"list.inactiveSelectionBackground": "#e6e7ef",
    	"list.hoverBackground": "#00000000",
    	"list.activeSelectionBackground": "#c4d5ff",
    	"list.focusAndSelectionOutline": "#203d77",
    	"list.activeSelectionForeground": "#1e1e1e",

    	"menu.background": "#e9eeff",
    	"menu.border": "#94a6ca",
    	"menu.separatorBackground": "#c0cae9",
    	"menu.selectionBackground": "#b1c5ff",
    	"menu.selectionBorder": "#203d77",
    	"menubar.selectionBackground": "#ecf4ff",

    	"sideBar.background": "#f7f9fe",
    	"sideBar.border": "#5d6b99",

        "sideBarSectionHeader.border": "#333333",
    	"sideBarSectionHeader.background": "#bbcfff",

    	"statusBar.background": "#40508d",
    	"statusBar.noFolderBackground": "#40508d",
    	"statusBar.debuggingBackground": "#40508d",
    	"statusBarItem.hoverBackground": "#6673a4",

        //TODO
        // "editorGroupHeader.tabsBackground": "#5d6b99",
        //TODO find some better icons that allow you to see what the file type is with the darker background
        "tab.activeBackground": "#f5cc84",
        "tab.inactiveBackground": "#3b4f81",
        "tab.inactiveForeground": "#ffffff",
        "tab.lastPinnedBorder": "#ffffff",

        "titleBar.activeBackground": "#ccd5f0",
        "titleBar.inactiveBackground": "#ccd5f0",
	},
	"tokenColors": [
        {
            "name": "Type alias",
            "scope": [
                "entity.name.type.alias.cs"
            ],
            "settings": {
                "foreground": "#2B91AF"
            }
        },
        {
            "name": "Keyword, delete, builtin function",
            "scope": [
                "keyword",
                "keyword.operator.instanceof",
                "variable.language",
                "support.function.builtin"
            ],
            "settings": {
                "foreground": "#0000FF"
            }
        },
        {
            "name": "Function Name",
            "scope": [
                "entity.name.function"
            ],
            "settings": {
                "foreground": "#000000"
            }
        },
        {
            "name": "Storage, language constants",
            "scope": [
                "storage",
                "keyword.other",
                "keyword.operator.new",
                "keyword.operator.delete",
                "keyword.type.cs",
                "constant.language",
            ],
            "settings": {
                "foreground": "#0000ff"
            }
        },
        {
            "name": "String",
            "scope": [
                "string"
            ],
            "settings": {
                "foreground": "#a31515"
            }
        },
        {
            "name": "Escape sequence",
            "scope": [
                "constant.character.escape"
            ],
            "settings": {
                "foreground": "#b776fb"
            }
        },
        {
            "name": "Classes, Namespaces, T",
            "scope": [
                "entity.name.type",
            ],
            "settings": {
                "foreground": "#2b91af"
            }
        },
        {
            "name": "operators",
            "scope": [
                "punctuation.definition.directive.cpp",
                "punctuation.definition.constant",
                "keyword.operator",
                "punctuation.definition.keyword",
                "storage.type.function.arrow",
                "punctuation.definition.variable"
            ],
            "settings": {
                "foreground": "#000000" // unnecessary
            }
        },
        {
            "name": "Properties (aka: keys)",
            "scope": [
                "meta.property-name",
                "support.type.property-name"
            ],
            "settings": {
                "foreground": "#2b91af"
            }
        },
        {
            "name": "Values",
            "scope": [
                "string.quoted.double.html",
                "string.quoted.double.xml"
            ],
            "settings": {
                "foreground": "#0000ff"
            }
        },
        {
            "name": "C++: String punctuation",
            "scope": [
                "punctuation.definition.string.begin.cpp",
                "punctuation.definition.string.end.cpp",
            ],
            "settings": {
                "foreground": "#e21f1f"
            }
        },
        {
            "name": "HTML: attribute",
            "scope": [
                "entity.other.attribute-name"
            ],
            "settings": {
                "foreground": "#ff0000"
            }
        },
        {
            "name": "HTML: tag name",
            "scope": [
                "meta.tag.metadata",
                "meta.tag.structure"
            ],
            "settings": {
                "foreground": "#800000"
            }
        },
        {
            "name": "HTML: defaults",
            "scope": [
                "punctuation.definition.tag"
            ],
            "settings": {
                "foreground": "#000000"
            }
        },
        {
            "name": "XML: preprocessor, tag name",
            "scope": [
                "meta.tag.preprocessor.xml",
                "entity.name.tag.localname"
            ],
            "settings": {
                "foreground": "#800000"
            }
        },
        {
            "name": "CSS: Selector",
            "scope": [
                "entity.name.tag.css"
            ],
            "settings": {
                "foreground": "#800000"
            }
        },
        {
            "name": "CSS: id, class, pseudo class, Wildcard",
            "scope": [
                "entity.other.attribute-name.css",
                "entity.other.attribute-name.id.css",
                "entity.other.attribute-name.class.css",
                "entity.other.attribute-name.pseudo-class.css",
                "entity.name.tag.wildcard"
            ],
            "settings": {
                "fontStyle": "bold",
                "foreground": "#008800"
            }
        },
        {
            "name": "CSS: @media, functions",
            "scope": [
                "keyword.control.at-rule",
                "meta.function.shape.css",
                "meta.function.misc.css"
            ],
            "settings": {
                "foreground": "#0000ff"
            }
        },
        {
            "name": "CSS: defaults",
            "scope": [
                "keyword.other.unit",
                "constant.numeric.css"
            ],
            "settings": {
                "foreground": "#000000"
            }
        },
        {
            "name": "JS: defaults",
            "scope": [
                "entity.name.type.instance.jsdoc",
                "variable.other.jsdoc"
            ],
            "settings": {
                "foreground": "#000000"
            }
        },
        {
            "name": "Python: function definition, support function",
            "scope": [
                "entity.name.function.python",
                "support.type.python"
            ],
            "settings": {
                "foreground": "#2b91af"
            }
        },
        {
            "name": "Markdown: Heading, image-inline",
            "scope": [
                "markup.heading",
                "string.other.link.description.markdown",
                "meta.image.inline.markdown"
            ],
            "settings": {
                "foreground": "#2b91af"
            }
        },
        {
            "name": "Markdown: seperator",
            "scope": [
                "meta.separator.markdown"
            ],
            "settings": {
                "foreground": "#0000ff"
            }
        },
        {
            "name": "Markdown: bold",
            "scope": [
                "markup.bold.markdown"
            ],
            "settings": {
                "fontStyle": "bold"
            }
        },
        {
            "name": "C#: defaults",
            "scope": [
                "entity.name.type.namespace.cs",
                "punctuation.parenthesis.open.cs",
                "punctuation.parenthesis.close.cs",
                "punctuation.terminator.statement.cs"
            ],
            "settings": {
                "foreground": "#000000"
            }
        },
        {
            "name": "C#: Region text",
            "scope": [
                "string.unquoted.preprocessor.message.cs"
            ],
            "settings": {
                "foreground": "#000000"
            }
        },
        {
            "name": "C#: #region declaration",
            "scope": [
                "keyword.preprocessor.region.cs",
                "punctuation.separator.hash.cs"
            ],
            "settings": {
                "foreground": "#808080"
            }
        },
        {
            "name": "Powershell: Variable",
            "scope": [
                "variable.other.readwrite.powershell"
            ],
            "settings": {
                "foreground": "#EC2D00"
            }
        },
        {
            "name": "Powershell: Functions",
            "scope": [
                "support.function.powershell"
            ],
            "settings": {
                "foreground": "#0000FF"
            }
        },
        {
            "name": "Powershell: Variable function call",
            "scope": [
                "variable.other.member.powershell"
            ],
            "settings": {
                "foreground": "#000000"
            }
        },
	],

    "semanticHighlighting": true,
    "semanticTokenColors": {
        "class": "#2B91AF",
            "constant": "#000000",
            "controlKeyword": "#8F08C4",
            "macro": "#808080",
            "namespace": "#000000",
            "number": "#000000",
            "parameter": "#1F377F",
            "preprocessorText": "#000000",
            "property": "#000000",
            "punctuation": "#000000",
            "string": "#A31515",
            "stringEscapeCharacter": "#B776FB",
            "stringVerbatim": "#800000",
            "variable": "#1F377F",
            "variable.defaultLibrary":"#2B91AF",
            "regexp": "#800000",
            "regexAlternation": "#05C3BA",
            "regexAnchor": "#FF00C1",
            "regexCharacterClass": "#0073FF",
            "regexComment": "#008000",
            "regexGrouping": "#05C3BA",
            "regexOtherEscape": "#9E5B71",
            "regexQuantifier": "#FF00C1",
            "regexSelfEscapedCharacter": "#800000",
            "regexSource": "#000000",
            "regexSpecialCharacter": "#ff0000",
            "regexText": "#800000",
    }
}
